<% include ../partials/header %>
<form action="/users/<%= user._id %>?_method=PUT" method="POST">
<div class="row">
    <div class="col-md-4">
        <h1>
            <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>">
            <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>">
        </h1>
        <div class="thumbnail">
            <!--<div class="form-group">-->
            <!--    <label for="image">Profile Pic</label>-->
            <!--    <input class="form-control" type="file" name="image" value="<%= user.avatar%>" accept="image/*" required>-->
            <!--</div>-->
            <img src="<%= user.avatar %>" alt="user profile image">
            <div class="caption">
               <input class="form-control" type="text" name="user[email]" value="<%= user.email %>">  
            </div>
        </div>
        <textarea class="form-control" name="user[bio]" rows="5" cols="10"><%= user.bio %></textarea>
    </div>
    <div class="col-md-6">
        <h3>
            <input class="form-control" type="text" name="user[username]" value="<%= user.username %>">'s campgrounds
        </h3>
        <ul>
        <% campgrounds.forEach(function(campground){ %>
            <li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
        <% }) %>
        </ul>
    </div>
    <div class="col-md-2">
        <h3>
        <div class="form-group">
            <input type="submit" name="save" class="btn btn-sm btn-success btn-block">
        </div>
        </form>
        <a href="/users/<%= user._id %>" style="text-decoration: none">
            <input name="cancel" class="btn btn-sm btn-danger btn-block" value="X" readonly>  
        </a>
        </h3>
    </div>
</div>

   
<% include ../partials/footer %>